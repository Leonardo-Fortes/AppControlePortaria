<Window x:Class="AppPortariaControle.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AppPortariaControle"
        mc:Ignorable="d"
        Title="Controle Portaria" Height="700" Width="1074" MinWidth="1074" MinHeight="700">

    <Grid>
        <!-- Camada 1: Gradiente Radial -->
        <Grid>
            <Grid.Background>
                <RadialGradientBrush GradientOrigin="0.5,-0.2071" Center="0.5,0.5" RadiusX="0.5" RadiusY="0.5">
                    <GradientStop Color="#FF0CAFFF" Offset="0.0" />
                    <GradientStop Color="#FF0062A3" Offset="0.5" />
                    <GradientStop Color="#FF001F3D" Offset="1.0" />
                </RadialGradientBrush>
            </Grid.Background>
        </Grid>

        <!-- Imagem -->
        <Image Source="Imagens/logo2.png"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"
               Stretch="None"
               Margin="0,-424,0,0"
               Height="1860"
               Width="862"
               RenderTransformOrigin="0.5,0.56">
            <!-- Usando RenderTransform para escalar a imagem -->
            <Image.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleX="0.2" ScaleY="0.2"/>
                    <SkewTransform/>
                    <RotateTransform Angle="-0.396"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Image.RenderTransform>
        </Image>

        <!-- Labels -->
        <Grid>
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,260,0,0">
                <!-- Label Usuário com Ícone -->
                <Border Background="#1AFFFFFF"
                    BorderBrush="#FF000000"
                BorderThickness="1"
                CornerRadius="10"
                Padding="10"
                Margin="0,0,0,10">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <Image Source="Imagens/icon-user.png"
                            Width="24"
                            Height="24"
                            Margin="0,0,10,0"/>
                            <Label Content="Usuário"
                       HorizontalAlignment="Left"
                       FontWeight="Bold"
                       VerticalAlignment="Center"
                       FontSize="16"
                       Foreground="White" />
                    </StackPanel>
                </Border>
                <Border Background="#1AFFFFFF" 
                    BorderBrush="#FF000000"
                BorderThickness="1"
                CornerRadius="10"
                Padding="10">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <Image Source="Imagens/icone-senha.png"
                            Width="24"                          
                            Height="24"
                            Margin="0,0,10,0"/>
                        <Label Content="Senha"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       FontWeight="Bold"
                       FontSize="16"
                       Width="140"
                       Foreground="White"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Grid>


    </Grid>
</Window>
